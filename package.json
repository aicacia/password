{
	"name": "@aicacia/secrets",
	"version": "0.1.0",
	"type": "module",
	"workspaces": [
		"chrome"
	],
	"scripts": {
		"svelte-kit": "svelte-kit",
		"clean": "rm -rf node_modules/.vite .svelte-kit build",
		"package": "svelte-kit package",
		"start": "svelte-kit dev --host --open",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"chrome.start": "npm run package && npm -w chrome run clean && npm -w chrome run start",
		"chrome.build": "npm run package && npm -w chrome run clean && npm -w chrome run build",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "next",
		"@sveltejs/kit": "next",
		"@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
		"@types/openpgp": "^4.4.18",
		"@types/postcss-import": "^14.0.0",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.27.1",
		"@typescript-eslint/parser": "^5.27.1",
		"autoprefixer": "^10.4.7",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.14",
		"postcss-import": "^14.1.0",
		"postcss-nesting": "^10.1.8",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.48.0",
		"svelte-check": "^2.7.2",
		"svelte-preprocess": "^4.10.7",
		"svelte2tsx": "^0.5.10",
		"tailwindcss": "^3.1.1",
		"tslib": "^2.4.0",
		"typescript": "^4.7.3"
	},
	"dependencies": {
		"@aicacia/debounce": "^0.1.14",
		"@aicacia/rand": "^0.2.10",
		"@aicacia/range": "^0.1.2",
		"@aicacia/string-fuzzy_equals": "^0.1.4",
		"openpgp": "^5.3.0",
		"query-string": "^7.1.1",
		"remotestorage-widget": "^1.5.4",
		"remotestoragejs": "^2.0.0-beta.3",
		"svelte-icons": "^2.1.0",
		"svelte-portal": "^2.2.0",
		"uuid": "^8.3.2",
		"vest": "^4.4.1"
	}
}
